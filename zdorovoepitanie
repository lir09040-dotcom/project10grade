                            <p>–î–µ—Ä–∂–∏—Ç–µ –ø–æ–¥ —Ä—É–∫–æ–π —è–±–ª–æ–∫–∏, –æ—Ä–µ—Ö–∏ –∏–ª–∏ –π–æ–≥—É—Ä—Ç. –≠—Ç–æ –ø–æ–º–æ–∂–µ—Ç –∏–∑–±–µ–∂–∞—Ç—å —Å–æ–±–ª–∞–∑–Ω–∞ —Å—ä–µ—Å—Ç—å –≤—Ä–µ–¥–Ω–æ—Å—Ç–∏.</p>
                        </div>
                    </div>

                    <div class="tip-item">
                        <div class="tip-icon">üì±</div>
                        <div class="tip-text">
                            <strong>–ü–ª–∞–Ω–∏—Ä—É–π—Ç–µ –º–µ–Ω—é</strong>
                            <p>–°–æ—Å—Ç–∞–≤–ª—è–π—Ç–µ –º–µ–Ω—é –Ω–∞ –Ω–µ–¥–µ–ª—é - —ç—Ç–æ –ø–æ–º–æ–∂–µ—Ç –ø–∏—Ç–∞—Ç—å—Å—è —Ä–∞–∑–Ω–æ–æ–±—Ä–∞–∑–Ω–æ –∏ –∏–∑–±–µ–∂–∞—Ç—å —Å–ø–æ–Ω—Ç–∞–Ω–Ω—ã—Ö –ø–µ—Ä–µ–∫—É—Å–æ–≤.</p>
                        </div>
                    </div>

                    <div class="tip-item">
                        <div class="tip-icon">ü•ó</div>
                        <div class="tip-text">
                            <strong>–°–ø—Ä—è—á—å—Ç–µ –ø–æ–ª–µ–∑–Ω–æ—Å—Ç–∏</strong>
                            <p>–î–æ–±–∞–≤–ª—è–π—Ç–µ –æ–≤–æ—â–∏ –≤ –ø—Ä–∏–≤—ã—á–Ω—ã–µ –±–ª—é–¥–∞: –≤ –æ–º–ª–µ—Ç, –ø–∞—Å—Ç—É, —Å–æ—É—Å—ã. –¢–∞–∫ –≤—ã –Ω–µ–∑–∞–º–µ—Ç–Ω–æ —É–≤–µ–ª–∏—á–∏—Ç–µ –∏—Ö –ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- –§—É—Ç–µ—Ä -->
        <div class="footer">
            <p>¬© 2026 –ó–¥–æ—Ä–æ–≤–æ–µ –ø–∏—Ç–∞–Ω–∏–µ | –ó–∞–±–æ—Ç—å—Å—è –æ —Å–µ–±–µ –ø—Ä–∞–≤–∏–ª—å–Ω–æ</p>
        </div>
    </div>

    <script>
        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –≤–∫–ª–∞–¥–æ–∫
        document.querySelectorAll('.tab-btn').forEach(button => {
            button.addEventListener('click', () => {
                // –£–±–∏—Ä–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —É –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫ –∏ –∫–æ–Ω—Ç–µ–Ω—Ç–∞
                document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('active'));
                
                // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Ç–µ–∫—É—â–µ–π –∫–Ω–æ–ø–∫–µ
                button.classList.add('active');
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–∏–π –∫–æ–Ω—Ç–µ–Ω—Ç
                const tabId = button.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Ç–µ—Å—Ç–∞
        function checkQuiz() {
            const questions = ['q1', 'q2', 'q3', 'q4'];
            let totalScore = 0;
            let answeredCount = 0;
            let allAnswered = true;

            questions.forEach(q => {
                const selected = document.querySelector(`input[name="${q}"]:checked`);
                if (selected) {
                    totalScore += parseInt(selected.value);
                    answeredCount++;
                } else {
                    allAnswered = false;
                }
            });

            const resultDiv = document.getElementById('resultMessage');
            
            if (!allAnswered) {
                resultDiv.textContent = '‚ùì –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ—Ç–≤–µ—Ç—å—Ç–µ –Ω–∞ –≤—Å–µ –≤–æ–ø—Ä–æ—Å—ã!';
                resultDiv.style.background = '#fff3e0';
                resultDiv.style.color = '#e65100';
                resultDiv.classList.add('show');
                return;
            }

            let message = '';
            let bgColor = '#e8f5e9';
            let textColor = '#1b5e20';

            if (totalScore <= 2) {
                message = 'üòü –í–∞—à–∏ –ø–∏—â–µ–≤—ã–µ –ø—Ä–∏–≤—ã—á–∫–∏ —Ç—Ä–µ–±—É—é—Ç –≤–Ω–∏–º–∞–Ω–∏—è! –ù–∞—á–Ω–∏—Ç–µ —Å –º–∞–ª–æ–≥–æ: –¥–æ–±–∞–≤—å—Ç–µ –±–æ–ª—å—à–µ –æ–≤–æ—â–µ–π –≤ —Ä–∞—Ü–∏–æ–Ω, –∑–∞–º–µ–Ω–∏—Ç–µ —Ñ–∞—Å—Ç—Ñ—É–¥ –¥–æ–º–∞—à–Ω–µ–π –µ–¥–æ–π. –ü–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –Ω–∞—à–∏ —Å–æ–≤–µ—Ç—ã!';
                bgColor = '#ffebee';
                textColor = '#b71c1c';
            } else if (totalScore <= 5) {
                message = 'üòä –£ –≤–∞—Å –Ω–µ–ø–ª–æ—Ö–∏–µ –ø—Ä–∏–≤—ã—á–∫–∏, –Ω–æ –µ—Å—Ç—å –∫—É–¥–∞ —Ä–∞—Å—Ç–∏! –°—Ç–∞—Ä–∞–π—Ç–µ—Å—å –µ—Å—Ç—å –±–æ–ª—å—à–µ —Ñ—Ä—É–∫—Ç–æ–≤ –∏ –Ω–µ –ø—Ä–æ–ø—É—Å–∫–∞—Ç—å –∑–∞–≤—Ç—Ä–∞–∫. –í—ã –Ω–∞ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–º –ø—É—Ç–∏!';
                bgColor = '#fff3e0';
                textColor = '#bf360c';
            } else {
                message = 'üåü –û—Ç–ª–∏—á–Ω–æ! –£ –≤–∞—Å –∑–∞–º–µ—á–∞—Ç–µ–ª—å–Ω—ã–µ –ø–∏—â–µ–≤—ã–µ –ø—Ä–∏–≤—ã—á–∫–∏! –¢–∞–∫ –¥–µ—Ä–∂–∞—Ç—å! –ü–æ–¥–µ–ª–∏—Ç–µ—Å—å —Å–≤–æ–∏–º–∏ –∑–Ω–∞–Ω–∏—è–º–∏ —Å –¥—Ä—É–∑—å—è–º–∏.';
            }

            resultDiv.textContent = message;
            resultDiv.style.background = bgColor;
            resultDiv.style.color = textColor;
            resultDiv.classList.add('show');
        }

        // –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤
        let touchstartX = 0;
        let touchendX = 0;
        
        document.querySelector('.mobile-container').addEventListener('touchstart', e => {
            touchstartX = e.changedTouches[0].screenX;
        });

        document.querySelector('.mobile-container').addEventListener('touchend', e => {
            touchendX = e.changedTouches[0].screenX;
            handleSwipe();
        });

        function handleSwipe() {
            const tabs = ['info', 'quiz', 'tips'];
            const currentTab = document.querySelector('.tab-pane.active').id;
            let currentIndex = tabs.indexOf(currentTab);
            
            if (touchendX < touchstartX - 50 && currentIndex < tabs.length - 1) {
                // –°–≤–∞–π–ø –≤–ª–µ–≤–æ - —Å–ª–µ–¥—É—é—â–∞—è –≤–∫–ª–∞–¥–∫–∞
                const nextTab = tabs[currentIndex + 1];
                document.querySelector(`[data-tab="${nextTab}"]`).click();
            }
            
            if (touchendX > touchstartX + 50 && currentIndex > 0) {
                // –°–≤–∞–π–ø –≤–ø—Ä–∞–≤–æ - –ø—Ä–µ–¥—ã–¥—É—â–∞—è –≤–∫–ª–∞–¥–∫–∞
                const prevTab = tabs[currentIndex - 1];
                document.querySelector(`[data-tab="${prevTab}"]`).click();
            }
        }
    </script>
</body>
</html>
